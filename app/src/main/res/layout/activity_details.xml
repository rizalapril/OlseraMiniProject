<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.DetailsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerLyt"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/btnClose"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="10dp"
            android:text="Add Location"
            android:fontFamily="sans-serif-medium"
            android:textSize="16sp"
            android:textColor="@color/black"/>

        <LinearLayout
            android:id="@+id/btnClose"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintWidth_percent="0.15"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/outline_close_black_24"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/lineSeparate"
        android:layout_width="match_parent"
        android:layout_height="1px"
        app:layout_constraintTop_toBottomOf="@+id/headerLyt"
        android:background="@color/line"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/lineSeparate"
        app:layout_constraintBottom_toTopOf="@+id/bottomLyt"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <!-- ////////////////////////////////////////////////// -->

            <!--STATUS-->
            <LinearLayout
                android:id="@+id/statusCompanyLyt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:fontFamily="sans-serif"
                    android:textSize="12sp"
                    android:textColor="@color/black"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:weightSum="1">
                    <LinearLayout
                        android:id="@+id/btnStatusActive"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:background="@drawable/bg_left_status_blue">
                        <TextView
                            android:id="@+id/txtStatusActive"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="@string/filter_active"
                            android:fontFamily="sans-serif"
                            android:textSize="14sp"
                            android:textColor="@color/white"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btnStatusInactive"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:background="@drawable/bg_right_status_default">
                        <TextView
                            android:id="@+id/txtStatusInactive"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="@string/filter_inactive"
                            android:fontFamily="sans-serif"
                            android:textSize="14sp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!--NAME-->
            <LinearLayout
                android:id="@+id/nameCompanyLyt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:fontFamily="sans-serif"
                    android:textSize="12sp"
                    android:textColor="@color/black"/>
                <LinearLayout
                    android:id="@+id/bgName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:background="@drawable/bg_default_edittext">
                    <EditText
                        android:id="@+id/txtNameCompany"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/imgProfile"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@color/transparent"
                        android:fontFamily="sans-serif"
                        android:hint="Company name - Location"/>
                </LinearLayout>
            </LinearLayout>

            <!--LOCATION HEADER-->
            <LinearLayout
                android:id="@+id/locationHeaderCompanyLyt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location Address"
                    android:fontFamily="sans-serif"
                    android:textSize="15sp"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <!--MAP-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/mapCompanyLyt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">
                <TextView
                    android:id="@+id/titleMiniMap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:text="Map"
                    android:fontFamily="sans-serif"
                    android:textSize="12sp"
                    android:textColor="@color/black"/>

                <fragment
                    android:id="@+id/miniMap"
                    android:name="com.example.olseraminiproject.view.customview.GoogleMapWithScrollFix"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:layout_constraintTop_toBottomOf="@+id/titleMiniMap"
                    android:layout_marginTop="10dp"/>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btnChangeLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/outline_create_black_18"
                    app:fabSize="mini"
                    app:elevation="3dp"
                    android:backgroundTint="@color/white" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--ADDRESS-->
            <LinearLayout
                android:id="@+id/addressCompanyLyt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:fontFamily="sans-serif"
                    android:textSize="15sp"
                    android:textColor="@color/black"/>
                <LinearLayout
                    android:id="@+id/bgAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:background="@drawable/bg_default_edittext">
                    <EditText
                        android:id="@+id/txtAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/imgProfile"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@color/transparent"
                        android:fontFamily="sans-serif"
                        android:minLines="2"
                        android:gravity="top|start"
                        android:inputType="textMultiLine"
                        android:hint="detail address"/>
                </LinearLayout>
            </LinearLayout>

            <!--CITY-->
            <LinearLayout
                android:id="@+id/cityCompanyLyt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="City"
                    android:fontFamily="sans-serif"
                    android:textSize="15sp"
                    android:textColor="@color/black"/>
                <LinearLayout
                    android:id="@+id/bgCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:background="@drawable/bg_default_edittext">
                    <EditText
                        android:id="@+id/txtCity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/imgProfile"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@color/transparent"
                        android:fontFamily="sans-serif"
                        android:hint="city"/>
                </LinearLayout>
            </LinearLayout>

            <!--ZIP CODE-->
            <LinearLayout
                android:id="@+id/zipCodeCompanyLyt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zip Code"
                    android:fontFamily="sans-serif"
                    android:textSize="15sp"
                    android:textColor="@color/black"/>
                <LinearLayout
                    android:id="@+id/bgZipCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:background="@drawable/bg_default_edittext">
                    <EditText
                        android:id="@+id/txtZipCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/imgProfile"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@color/transparent"
                        android:fontFamily="sans-serif"
                        android:hint="zip code"/>
                </LinearLayout>
            </LinearLayout>

            <!--DELETE-->
            <LinearLayout
                android:id="@+id/deleteButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:background="@drawable/bg_round_button"
                android:backgroundTint="@color/quantum_googred"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delete"
                    android:fontFamily="sans-serif"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"/>

        <!-- ////////////////////////////////////////////////// -->
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/lineSeparateBottom"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomLyt"
        android:background="@drawable/gradient_bottom"
        android:orientation="horizontal"/>

    <LinearLayout
        android:id="@+id/bottomLyt"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintBottom_toBottomOf="parent"
        android:weightSum="1"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_margin="5dp"
            android:background="@drawable/bg_round_button">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:fontFamily="sans-serif-medium"
                android:textSize="16sp"
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnSave"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_margin="5dp"
            android:background="@drawable/bg_round_button"
            android:backgroundTint="@color/teal_200">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:fontFamily="sans-serif-medium"
                android:textSize="16sp"
                android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>